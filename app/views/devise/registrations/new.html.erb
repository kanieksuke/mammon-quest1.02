<h2>マモン・クエストにようこそ!</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "Eメールを入力してください" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "パスワードを入力してください" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "もう一度パスワードを入力してください" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "いくら貯めますか?" %><br />
    <%= f.number_field :target_amount, min: 1 %>
    <em>円</em>
  </div>

  <div class="field">
    <%= f.label "いつまでに貯めますか?" %><br />
    <%= f.number_field :target_date, min: 1 %>
    <em>日</em>
  </div>

  <div class="field">
    <%= f.label "先月の収入を入力してください" %><br />
    <%= f.number_field :income %>
    <em>円</em>
  </div>

  <div class="field">
    <%= f.label "先月の固定費を入力してください" %><br />
    <%= f.number_field :fixed_cost %>
    <em>円</em>
  </div>

  <div class="actions">
    <%= f.submit "マモンと戦う" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
